extends layout

block content
  form(method='POST', action='/build')
    p
      span Build a grab bag with
      select(name='numItems')
        - var i = minNumItems
        while i <= maxNumItems
          option(value=i) #{i}
          - i++
      span  item(s), totaling around 
      select(name='targetPrice')
        each price in prices
          option(value=price) $#{price}
      button(type='submit') Build it!
      
  div(id='flash')